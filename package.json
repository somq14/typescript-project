{
  "name": "typescript-project",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "tsc --watch",
    "build": "tsc",
    "test": "jest",
    "coverage": "jest --coverage && serve -l 9000 coverage/lcov-report",
    "format": "prettier --write --ignore-unknown '**/*'",
    "lint": "eslint --max-warnings 0 '**/*.{js,jsx,ts,tsx}'",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@somq14/eslint-config": "https://github.com/somq14/eslint-config#v0.3.0",
    "@types/jest": "~27.4.1",
    "eslint": "~8.10.0",
    "husky": "~7.0.4",
    "jest": "~27.5.1",
    "lint-staged": "~12.3.5",
    "prettier": "~2.5.1",
    "serve": "~13.0.2",
    "ts-jest": "~27.1.3",
    "typescript": "~4.5.5"
  }
}
