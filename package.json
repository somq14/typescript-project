{
  "name": "typescript-project",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "start": "tsc --watch",
    "build": "rm -rf dist && mkdir -p dist && tsc",
    "test": "jest",
    "coverage": "jest --coverage && serve -l 9000 coverage/lcov-report",
    "format": "prettier --write --ignore-unknown '**/*'",
    "lint": "eslint --max-warnings 0 '**/*.{js,jsx,ts,tsx}'"
  },
  "devDependencies": {
    "@somq14/eslint-config": "https://github.com/somq14/eslint-config#feature/config",
    "@types/jest": "^27.4.0",
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "serve": "^13.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
